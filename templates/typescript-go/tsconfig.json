{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "skipLibCheck": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  